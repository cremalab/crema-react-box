{
  "name": "react-boxen",
  "version": "0.0.18",
  "main": "web.js",
  "license": "MIT",
  "scripts": {
    "start": "start-storybook -p 9001",
    "build": "rm -rf ./dist/* && webpack --progress --profile --colors",
    "build:dev": "npm run build -- --env=dev",
    "build:prod": "npm run build -- --env=prod",
    "test": "NODE_ENV=test jest",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "test:watch:coverage": "npm run test:coverage -- --watch",
    "test:visual": "run-p test:vis:serve test:vis:run",
    "test:visual:add": "run-p test:vis:serve test:vis:run:ref:add",
    "test:visual:reference": "run-p test:vis:serve test:vis:run:ref",
    "test:vis:serve": "serve storybook-static",
    "test:vis:serve:stop": "lsof -ti:5000 | xargs kill",
    "test:vis:build": "build-storybook",
    "test:vis:run": "run-s test:vis:build test:vis:backstop test:vis:serve:stop",
    "test:vis:run:ref:add": "run-s test:vis:build test:vis:backstop:ref:add test:vis:serve:stop",
    "test:vis:run:ref": "run-s test:vis:build test:vis:backstop:ref test:vis:serve:stop",
    "test:vis:backstop": "backstop --configPath backstop.config.js test",
    "test:vis:backstop:ref:add": "backstop --configPath backstop.config.js reference --i",
    "test:vis:backstop:ref": "backstop --configPath backstop.config.js reference"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.21.0",
    "@kadira/storybook-addon-knobs": "^1.7.1",
    "@kadira/storybook-addons": "^1.3.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-ramda": "1.2.0",
    "babel-preset-stage-0": "^6.22.0",
    "backstopjs": "^2.6.11",
    "case-sensitive-paths-webpack-plugin": "^1.1.4",
    "enzyme": "^2.7.1",
    "eslint": "^3.14.1",
    "eslint-plugin-react": "^6.9.0",
    "getstorybook": "^1.7.0",
    "jest": "^18.1.0",
    "jest-enzyme": "^2.1.0",
    "npm-run-all": "^4.0.2",
    "phantomjs": "^2.1.7+deprecated",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "require-glob-array": "^4.0.0",
    "serve": "^5.1.2",
    "source-map-loader": "^0.1.6",
    "webpack": "^2.0.0"
  },
  "dependencies": {
    "glamor": "^2.20.24",
    "ramda": "^0.23.0"
  },
  "peerDependencies": {
    "react": "^15.0.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
    "moduleDirectories": [
      "node_modules",
      "./src"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "react-native": "<rootDir>/node_modules/react-native-web"
    }
  }
}
